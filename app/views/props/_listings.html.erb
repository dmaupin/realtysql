<div class="container" id="props">
<% @props.each do |prop| %>
		<!-- Using an inline style to select the first photo from each property record as the background image  -->
		<div class="prop" style="background-image: url(<% prop.pics.limit(1).each do |i| %><%= i.item_url %><% end %> );">
			<h1><%= link_to prop.title, prop_path(prop)%></h1><br>
			<h4><%= prop.price %></h4>
			<div class="proplinks"><%= link_to "More Info", prop_path(prop)%></div>
		</div>
<% end %>
<div class="prop" id="slug">
	<div><h1>New Properties are<br> frequently being added.<br>Check back soon.</h1></div>
</div>
</div>