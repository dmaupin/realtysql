<div class="formcontainer">

<h1>Editing: <%= @prop.title %></h1>

<div class="form">

<!-- flash msg goes here -->

<%= form_for @prop do |p| %>
	
	Name: <%= p.text_field :title %>
	Address <%= p.text_field :street %>
	City, State, Zip <%= p.text_field :city %>
	Price: <%= p.text_field :price %>
	Square Footage: <%= p.number_field :sqft %>
	Description: <%= p.text_area :description %><br>
	MLS url: <%= p.text_field :mls  %>
	Beds: <%= p.number_field :beds %>
	Baths <%= p.number_field :baths %>
		<%= p.fields_for :pics do |i| %>
			<%= i.label :item, "Photos" %><br/>
			<%= i.file_field :item, :multiple => true, name: "pics[item][]" %><br/>
		<%	 end %>
	<%= p.submit "Update" %>

	<% end %>

<button><%= link_to "Delete", :prop, method: :delete, data: {confirm: "Are you sure? This action cannot be undone."} %></button>

<button><%= link_to "Cancel", prop_path %></button>

</div>

</div>